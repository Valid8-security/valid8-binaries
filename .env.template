# Valid8 Security Scanner - Stripe Configuration
# Copy this to .env and fill in your values

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# Get these from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Create webhook endpoint at https://dashboard.stripe.com/test/webhooks
# URL: https://your-domain.com/api/webhooks/stripe
# Events: checkout.session.completed, customer.subscription.*, invoice.payment_*
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Product IDs (run setup_stripe_products.py to create these)
STRIPE_PRODUCT_PRO_MONTHLY=price_your_price_id_here
STRIPE_PRODUCT_PRO_YEARLY=price_your_price_id_here
STRIPE_PRODUCT_ENT_MONTHLY=price_your_price_id_here
STRIPE_PRODUCT_ENT_YEARLY=price_your_price_id_here
STRIPE_PRODUCT_ENT_CUSTOM=price_your_price_id_here

# =============================================================================
# LICENSE CONFIGURATION
# =============================================================================
# Generate a secure random string for license signing
PARRY_LICENSE_SECRET=your_secure_random_secret_here_32_chars_minimum
PARRY_LICENSE_SERVER=https://api.valid8.dev

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
# Email service for license delivery (future)
# SENDGRID_API_KEY=your_sendgrid_key_here
# EMAIL_FROM=support@valid8.dev

# Web application URLs
VALID8_SUCCESS_URL=https://valid8.dev/success
VALID8_CANCEL_URL=https://valid8.dev/pricing
VALID8_WEBHOOK_URL=https://api.valid8.dev/webhooks/stripe
