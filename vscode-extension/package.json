{
  "name": "parry-security-scanner",
  "displayName": "Parry Security Scanner",
  "description": "Real-time security vulnerability detection with AI-powered fixes",
  "version": "1.0.0",
  "publisher": "parry-dev",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Parry-AI/parry-scanner"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "security",
    "vulnerability",
    "scanner",
    "sast",
    "ai",
    "security-scanner",
    "code-analysis"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "parry.scanFile",
        "title": "Parry: Scan Current File",
        "icon": "$(shield)"
      },
      {
        "command": "parry.scanWorkspace",
        "title": "Parry: Scan Entire Workspace",
        "icon": "$(shield)"
      },
      {
        "command": "parry.showSecurityPanel",
        "title": "Parry: Show Security Panel",
        "icon": "$(lock)"
      },
      {
        "command": "parry.clearDiagnostics",
        "title": "Parry: Clear All Diagnostics"
      },
      {
        "command": "parry.activateLicense",
        "title": "Parry: Activate License"
      },
      {
        "command": "parry.showLicenseInfo",
        "title": "Parry: Show License Information"
      },
      {
        "command": "parry.subscribe",
        "title": "Parry: Subscribe to Pro"
      },
      {
        "command": "parry.queryLLM",
        "title": "Parry: Ask LLM About This Code",
        "icon": "$(robot)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "parry-security",
          "title": "Parry Security",
          "icon": "media/shield.svg"
        }
      ]
    },
    "views": {
      "parry-security": [
        {
          "id": "parryVulnerabilities",
          "name": "Vulnerabilities",
          "icon": "media/shield.svg"
        },
        {
          "id": "parryStats",
          "name": "Statistics",
          "icon": "media/chart.svg"
        }
      ]
    },
    "configuration": {
      "title": "Parry Security Scanner",
      "properties": {
        "parry.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Parry security scanning"
        },
        "parry.realtimeScan": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time scanning as you type (requires Pro license)"
        },
        "parry.scanDelay": {
          "type": "number",
          "default": 2000,
          "minimum": 500,
          "maximum": 10000,
          "description": "Delay in milliseconds before scanning after typing stops"
        },
        "parry.severity": {
          "type": "string",
          "enum": ["low", "medium", "high", "critical"],
          "default": "low",
          "description": "Minimum severity level to display"
        },
        "parry.excludePatterns": {
          "type": "array",
          "default": ["**/node_modules/**", "**/dist/**", "**/build/**", "**/.git/**"],
          "description": "Glob patterns to exclude from scanning"
        },
        "parry.mode": {
          "type": "string",
          "enum": ["fast", "deep", "hybrid"],
          "default": "hybrid",
          "description": "Scanning mode: fast (pattern-only), deep (AI-powered), hybrid (both)"
        },
        "parry.autoFix": {
          "type": "boolean",
          "default": false,
          "description": "Automatically apply AI-generated fixes (use with caution)"
        },
        "parry.showInlineErrors": {
          "type": "boolean",
          "default": true,
          "description": "Show inline squiggly underlines for vulnerabilities"
        },
        "parry.apiEndpoint": {
          "type": "string",
          "default": "https://api.parry.dev",
          "description": "Parry API endpoint for Pro/Enterprise features"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "parry.scanFile",
          "group": "parry@1"
        }
      ],
      "editor/title": [
        {
          "when": "editorFocus",
          "command": "parry.scanFile",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "parry.scanWorkspace",
          "when": "view == parryVulnerabilities",
          "group": "navigation"
        },
        {
          "command": "parry.clearDiagnostics",
          "when": "view == parryVulnerabilities",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.x",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.x",
    "@vscode/test-electron": "^2.3.x"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "minimatch": "^9.0.3"
  }
}
